{% schema %}
  {
    "name": "FAQ Article",
    "settings": []
  }
{% endschema %}

{% stylesheet %}
.page-grid .content {
  max-width: 100% !important;
}
{% endstylesheet %}

{% javascript %}
	let tabNodes = document.querySelectorAll('.tab');
	let pageUrl = window.location.pathname;
	let matchedUrl;

  for(let i=0; i<tabNodes.length; i++){
      let item = tabNodes[i];
      let itemPath = item.pathname;
      if(itemPath ===  pageUrl) {
          matchedUrl = item.href;
          if(!item.classList.contains('active')) {
              item.classList.add('active')
          }
          break;
      }
  }

{% endjavascript %}
